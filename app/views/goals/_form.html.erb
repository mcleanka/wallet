<%= form_with(model: goal) do |form| %>
    <% if goal.errors.any? %>
    <div class="fade alert alert-light text-danger show">
      <div class="alert-heading h4">
        <%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:
      </div>

      <ul>
        <% goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">

    <div class="col-md-6 col-12">

      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

    </div>

    <div class="col-md-6 col-12">

      <div class="form-group">
        <%= form.label :amount, class: "form-label" %>
        <%= form.number_field :amount, class: "form-control" %>
      </div>

    </div>

    <div class="col-md-6 col-12">
      <div class="form-group">
        <%= form.label :category, class: "form-label" %>
        <%= form.select :category_id, options_for_select([['- Select from the list', nil]] + Category.all.map { |category| [category.name, category.id] }, (@goal.category_id.presence || nil)), {}, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6 col-12">

      <div class="form-group">
        <%= form.label :start_date, class: "form-label" %>
        <%= form.date_field :start_date, class: "form-control" %>
      </div>

    </div>

    <div class="col-md-6 col-12">

      <div class="form-group">
        <%= form.label :end_date, class: "form-label" %>
        <%= form.date_field :end_date, class: "form-control" %>
      </div>

    </div>

    <div class="col-md-6 col-12">
      <div class="form-group">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status_id, options_for_select([['- Select from the list', nil]] + Status.all.map { |status| [status.name, status.id] }, (@goal.status_id.presence || nil)), {}, class: "form-control" %>
      </div>
    </div>

    <div class="col-12">
      <div class="form-group">
        <%= form.label :description, class: "form-label"  %>
        <%= form.text_area :description, class: "form-control", row: 8 %>
      </div>
    </div>

    
</div>

  <hr class="mt-5 mb-5">
  <%= form.submit class: "w-100 btn btn-primary" %>
  <%= link_to "Back to goals", goals_path, class: "w-100 text-muted btn btn-link" %>

<% end %>
